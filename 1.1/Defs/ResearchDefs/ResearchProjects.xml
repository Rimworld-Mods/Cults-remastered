    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenAttire</defName>
        <label>Ritual Attire</label>
        <description>Allows for the design and creation of occult robes, hoods, and various masks. Wearing proper clothing increases chances of successful sacrifices.</description>
        <baseCost>300</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenStudies</li>
        </prerequisites>
        <researchViewX>1</researchViewX>
        <researchViewY>1</researchViewY>
    </ResearchProjectDef>

    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenSculptures</defName>
        <label>Sculptures</label>
        <description>Allows for the design and creation of occult sculptures dedicated to otherworldly entities.</description>
        <baseCost>300</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenStudies</li>
        </prerequisites>
        <researchViewX>1</researchViewX>
        <researchViewY>0</researchViewY>
    </ResearchProjectDef>

    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenObelisk</defName>
        <label>Obelisk Construction</label>
        <description>Allows for the design and construction of occult obelisks.</description>
        <baseCost>600</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenSculptures</li>
        </prerequisites>
        <researchViewX>2</researchViewX>
        <researchViewY>0</researchViewY>
    </ResearchProjectDef>

    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenAltarI</defName>
        <label>Altar</label>
        <description>Allows the creation of an altar of worship to conduct rituals for beings beyond this world.</description>
        <baseCost>200</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenStudies</li>
        </prerequisites>
        <researchViewX>1</researchViewX>
        <researchViewY>3</researchViewY>
    </ResearchProjectDef>

    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenAltarII</defName>
        <label>Altar of Sacrifice</label>
        <description>Allows you to upgrade an altar to an altar of sacrifice to show greater appreciation of extradimensional beings.</description>
        <baseCost>350</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenAltarI</li>
        </prerequisites>
        <researchViewX>2</researchViewX>
        <researchViewY>3</researchViewY>
    </ResearchProjectDef>

    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenAltarIII</defName>
        <label>Human Sacrifice</label>
        <description>Allows you to upgrade an altar to an altar of human sacrifice, allowing for impressive benefits from cosmic entities.</description>
        <baseCost>500</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenAltarII</li>
        </prerequisites>
        <researchViewX>3</researchViewX>
        <researchViewY>3</researchViewY>
    </ResearchProjectDef>

