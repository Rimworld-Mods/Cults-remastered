    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenStudies</defName>
        <label>Decipher strange symbols</label>
        <description>Deciphers some of the materials language to make further research possible.</description>
        <baseCost>50</baseCost>
        <researchViewX>0</researchViewX>
        <researchViewY>2</researchViewY>
    </ResearchProjectDef>
