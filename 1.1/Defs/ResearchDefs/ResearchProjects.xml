    <ResearchProjectDef ParentName="OccultResearch">
        <defName>Cults_ForbiddenDeities</defName>
        <label>Probe occult deities</label>
        <description>Discover first deity that exists beyond this world.</description>
        <baseCost>150</baseCost>
        <prerequisites>
            <li>Cults_ForbiddenStudies</li>
        </prerequisites>
        <researchViewX>1</researchViewX>
        <researchViewY>2</researchViewY>
    </ResearchProjectDef>

