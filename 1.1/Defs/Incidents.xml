<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--================ Game conditions ===================-->

    <IncidentDef>
        <defName>Cults_Incident_StarsAreWrong</defName>
        <label>stars are wrong</label>
        <targetTags>
            <li>World</li>
        </targetTags>
        <category>Misc</category>
        <workerClass>Cults.IncidentWorker_StarsAlignment</workerClass>
        <gameCondition>Cults_GameCondition_StarsAreWrong</gameCondition>

        <letterLabel>The Stars Are Wrong</letterLabel>
        <letterDef>NegativeEvent</letterDef>

        <baseChance>3</baseChance>
        <minRefireDays>30</minRefireDays>
        <durationDays>
            <min>2.0</min>
            <max>3.0</max>
        </durationDays>
    </IncidentDef>

    <gameConditionDef>
        <defName>Cults_GameCondition_StarsAreWrong</defName>
        <conditionClass>Cults.GameCondition_StarsAreWrong</conditionClass>

        <label>stars are wrong</label>
        <letterText>Unbound to the proper order of the cosmos, the stars themselves seem to sting our eyes with a hateful scorn.</letterText>
        <letterDef>NegativeEvent</letterDef>

        <description>Unbound to the proper order of the cosmos, the stars themselves seem to sting our eyes with a hateful scorn. Sacrifices are discouraged during this period.</description>
        <endMessage>The stars as we know them have returned</endMessage>
        <canBePermanent>true</canBePermanent>
    </gameConditionDef>

    <!--==========-->

    <IncidentDef>
        <defName>Cults_Incident_StarsAreRight</defName>
        <label>stars are right</label>
        <targetTags>
            <li>World</li>
        </targetTags>
        <category>Misc</category>
        <workerClass>Cults.IncidentWorker_StarsAlignment</workerClass>
        <gameCondition>Cults_GameCondition_StarsAreRight</gameCondition>

        <letterLabel>The Stars Are Right</letterLabel>
        <letterDef>PositiveEvent</letterDef>

        <baseChance>3</baseChance>
        <minRefireDays>30</minRefireDays>
        <durationDays>
            <min>2.0</min>
            <max>3.0</max>
        </durationDays>
    </IncidentDef>

    <gameConditionDef>
        <defName>Cults_GameCondition_StarsAreRight</defName>
        <conditionClass>Cults.GameCondition_StarsAreRight</conditionClass>

        <label>stars are right</label>
        <letterText>The planets of the system have aligned. Otherworldly bodies seem to call to your colonists.</letterText>
        <letterDef>PositiveEvent</letterDef>

        <description>The planets of the system have auspiciously aligned. Plants and animals will flourish and cult sacrifices will receive bonuses.</description>
        <endMessage>Celestial bodies are no longer in alignment.</endMessage>
        <canBePermanent>true</canBePermanent>
    </gameConditionDef>

    <!--==========-->

    <IncidentDef>
        <defName>Cults_Incident_BloodMoon</defName>
        <label>blood moon</label>
        <category>Special</category>
        <targetTags>
            <li>World</li>
        </targetTags>
        <workerClass>IncidentWorker_MakeGameCondition</workerClass>
        <gameCondition>Cults_GameCondition_BloodMoon</gameCondition>
        <letterLabel>Blood Moon</letterLabel>
        <letterDef>ThreatSmall</letterDef>
        <baseChance>1</baseChance>
        <minThreatPoints>0</minThreatPoints>
        <minRefireDays>10</minRefireDays>
        <durationDays>0.75~1.25</durationDays>
    </IncidentDef>

    <GameConditionDef>
        <defName>Cults_GameCondition_BloodMoon</defName>
        <conditionClass>Cults.GameCondition_BloodMoon</conditionClass>

        <label>blood moon</label>
        <letterText>One of the moons of this planet is orbiting in front of the sun. It is a blood moon.</letterText>
        <description>One of the moons has taken on a mysterious hue, and a newly crimson sky drowns out the soothing colors of livelier days.</description>

        <endMessage>The blood moon is passing.</endMessage>
        <canBePermanent>true</canBePermanent>
    </GameConditionDef>

    <!--==========-->

</Defs>